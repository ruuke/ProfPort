%title Expeditions list

%p
  %strong Title
  = @expedition.title

%p
  %strong Description
  = @expedition.description

%p
  %strong Distance
  = @expedition.itinerary.planets.sum :distance

#accordion
  .card
    #headingOne.card-header
      %h5.mb-0
        %button.btn.btn-link{"aria-controls" => "collapseOne", "aria-expanded" => "true", "data-target" => "#collapseOne", "data-toggle" => "collapse"}
          Spaceships
    #collapseOne.collapse.show{"aria-labelledby" => "headingOne", "data-parent" => "#accordion"}
      .card-body
      %table
        = render @expedition.spaceships

%br
= link_to 'Edit', edit_expedition_path(@expedition) |
= link_to 'Back', expeditions_path

/ Button trigger modal
%button.btn.btn-primary{"data-target" => "#exampleModal", "data-toggle" => "modal", :type => "button"}
  Create new spaceship
/ Modal
#exampleModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %h5#exampleModalLabel.modal-title New spaceship
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body
        = render 'spaceships/form'
      .modal-footer
        %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Close
        